@using Microsoft.AspNetCore.Mvc.TagHelpers
@model List<Online_shop.Models.Factor>
@{
    var count = 1;
    <div class="table-responsive text-nowrap">
        <table class="table table-hover">
            <thead>
            <tr>
                <th class="text-center">شماره فاکتور</th>
                <th class="text-center">تاریخ ثبت</th>
                <th class="text-center">قیمت کل</th>
                <th class="text-center">مشاهده کالا ها</th>
            </tr>
            </thead>
            <tbody class="table-border-bottom-0">
            @if (Model.Count > 0)
            {
                @foreach (var item in Model)
                {


                    <tr>
                        <td class="text-center"><strong>@(count++)</strong></td>
                        <td class="text-center"><strong>@item.CreateDate</strong></td>
                        <td class="text-center"><strong>@item.TotalPrice</strong></td>
                        <td class="text-center"><a class="badge bg-label-success me-1" asp-controller="Home" asp-action="FactorDetail"asp-route-id="@item.FactorId">مشاهده</a></td>
                        </tr>



                }
            }
        

            </tbody>
        </table>

    </div>
}
