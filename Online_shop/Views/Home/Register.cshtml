@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Online_shop.Models.ViewModels
@model RegisterUserViewModel
@{
}
@if (ViewBag.Message != null)
{
    <div class="alert alert-
       <strong>Error!</strong> danger">@ViewBag.Message
        </div>
}
<div class="col-xl">
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0"> لطفا فیلد های مدبوطه را پر کنید</h5>
            <small class="text-muted float-end">ثبت نام</small>
        </div>
        <div class="card-body">
            <form method="post">
                <div class="mb-3">
                    <label class="form-label" asp-for="Name">نام </label>
                    <input type="text" class="form-control" asp-for="Name">


                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="Family">نام خانوادگی</label>
                    <input type="text" class="form-control" asp-for="Family">
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="Email">ایمیل</label>
                    <input type="text" class="form-control" asp-for="Email" placeholder="ایمیل خود را وارد کنید">
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="Password">رمز عبور</label>
                    <input type="text" class="form-control" asp-for="Password" placeholder="گذر واژه خود را وارد کنید">
                </div>

                <button type="submit" class="btn btn-primary" asp-controller="Home" asp-action="Register">ثبت نام</button>
            </form>
        </div>
    </div>
</div>
@section Scripts{
}